= provide(:title, 'Varastopaikat')

%h1 Varastopaikat

.container
  .span6.offset3
    = render "shared/nav"

= will_paginate

.container
  .span6.offset3.bordered
    = link_to :controller => "storagelocations", :action => "new", :huslab_id => @huslab.id do
      %i.icon-plus
      Lisää varastopaikka
      
    %table.table#simpleTableWithoutSearch
      %thead
        %th Nimi
        %th Lisätiedot
        %th
        %th
        
      %tbody
        - @storagelocations.each do |storagelocation|
          %tr
            %td= link_to storagelocation.name, storagelocation
            %td= storagelocation.info
            %td
              = link_to :controller => "storagelocations", :action => "edit", :id => storagelocation.id do
                %i.icon-edit
            %td
              = link_to storagelocation, method: :delete, confirm: "Haluatko varmasti poistaa varastopaikan?" do
                %i.icon-remove

= will_paginate

